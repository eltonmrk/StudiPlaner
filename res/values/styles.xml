<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Layout -->
	<style name="root_view">
    	<item name="android:background">@color/background</item>
    	<item name="android:padding">5dp</item>
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="textfield">
    	<item name="android:textColor">#000000</item>
    	<item name="android:textSize">12dip</item>
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    </style>
    
     <style name="label">
    	<item name="android:textColor">#000000</item>
    	<item name="android:textSize">12dip</item>
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- Buttons -->
    <style name="save_button">
    	<item name="android:textColor">#FFFFFF</item>
    	<item name="android:textSize">12dip</item>
    	<item name="android:background">#6ebb00</item>
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="cancel_button">
    	<item name="android:textColor">#FFFFFF</item>
    	<item name="android:background">#ff0000</item>
    	<item name="android:textSize">12dip</item>
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    </style>
    
    
    
    
    
    
    <style name="tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:textColor">@color/form_textcolor</item>
        <item name="android:textSize">12dip</item>
    </style>
    <style name="saveButton">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">50dip</item>
    	<item name="android:textSize">14dip</item>
    	<item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="cancelButton">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">50dip</item>
    	<item name="android:textSize">14dip</item>
    	<item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="checkBox">
    	<item name="android:layout_height">45dip</item>
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:textSize">14dip</item>
    	<item name="android:textColor">#ffffff</item>
    </style>
    <style name="label">
    	<item name="android:textSize">11dip</item>
    	<item name="android:textColor">@color/label</item>
    	<item name="android:gravity">center_vertical|right</item>
    	<item name="android:paddingRight">4dip</item>
    </style>
</resources>