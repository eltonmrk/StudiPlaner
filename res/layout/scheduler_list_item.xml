<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:weightSum="1.0"
	android:background="#6e6f7a" android:layout_height="wrap_content"
	android:padding="3dip">
	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_height="fill_parent" android:layout_width="0dip"
		android:layout_weight="0.20" android:gravity="center_vertical|center_horizontal">
		<LinearLayout android:id="@+id/LinearLayout06"
			android:orientation="vertical" android:background="@layout/rounded_corner_time"
			android:gravity="center_vertical" android:weightSum="1" android:layout_height="50dip" android:layout_width="50dip">
			<TextView android:layout_width="fill_parent" android:id="@+id/hr_begin"
				android:textColor="#4f3b1b" android:gravity="center_horizontal"
				android:text="08:00" android:layout_height="0dip" android:textStyle="bold"
				android:textSize="13dip" android:layout_weight="0.3"/>
			<TextView android:id="@+id/TextView01" android:text="~"
				android:layout_width="fill_parent" android:textColor="#4f3b1b"
				android:textStyle="bold" android:layout_height="0dip"
				android:gravity="center_vertical|center_horizontal"
				android:textSize="12dip" android:layout_weight="0.30"></TextView>
			<TextView android:layout_width="fill_parent" android:text="10:00"
				android:id="@+id/hr_end" android:textColor="#4f3b1b"
				android:gravity="center_horizontal" android:layout_height="0dip"
				android:textStyle="bold" android:textSize="13dip" android:layout_weight="0.3"></TextView>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:id="@+id/LinearLayout02"
		android:layout_height="fill_parent" android:layout_width="0dip"
		android:orientation="vertical" android:gravity="center_vertical" android:layout_weight="0.70">
		<LinearLayout android:id="@+id/LinearLayout04"
			android:gravity="bottom" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:paddingLeft="10dip">
			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/subject_type"
				android:textColor="#c6c9db" android:textSize="14dip"></TextView>
		</LinearLayout>
		<TextView android:id="@+id/subject" android:gravity="center_vertical"
			android:layout_width="fill_parent" android:textStyle="bold"
			android:text="@string/no_subject_descr" android:textColor="#ffffff" android:layout_height="wrap_content"
			android:textSize="14dip" android:paddingLeft="10dip"/>
		<LinearLayout android:id="@+id/LinearLayout05"
			android:layout_width="fill_parent" android:gravity="top|left"
			android:layout_gravity="top|left" android:orientation="vertical"
			android:layout_height="wrap_content" android:paddingLeft="10dip">
			getTodaysSubjectsgetTodaysSubjects
			<TextView android:id="@+id/room" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textColor="#c6c9db" android:textSize="14dip"></TextView>
			<TextView android:id="@+id/lecturer" android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:textColor="#c6c9db" android:textSize="14dip"></TextView>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:id="@+id/LinearLayout03"
		android:orientation="vertical" android:layout_weight="0.1"
		android:layout_width="0dip" android:layout_height="fill_parent"
		android:gravity="center">
		<ImageButton android:background="@drawable/fb" android:id="@+id/post_on_fb"
			android:layout_height="20px" android:layout_width="20px"></ImageButton>
	</LinearLayout>
</LinearLayout>