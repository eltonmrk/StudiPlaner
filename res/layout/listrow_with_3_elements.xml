<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:weightSum="1.0" android:background="@color/listitem_background"
	android:layout_height="wrap_content" android:id="@+id/listitem">
	<LinearLayout android:layout_width="0dip"
		android:layout_height="fill_parent" android:orientation="vertical"
		android:layout_weight="0.85">
		<TextView android:text="@+id/TextView01" android:gravity="center_vertical"
			android:id="@+id/listitem_txt" android:layout_width="fill_parent"
			android:textSize="14dip" android:layout_height="30dip"
			android:layout_marginLeft="10dip" android:textColor="@color/listitem_title"></TextView>
		<LinearLayout android:layout_width="fill_parent"
			android:weightSum="1.0" android:layout_marginLeft="10dip"
			android:layout_height="25dip" android:id="@+id/first_listitem">
			<TextView android:id="@+id/first_listitem_label"
				android:layout_weight="0.15" android:layout_width="20dip"
				android:layout_height="20dip" style="@style/label"></TextView>
			<TextView android:layout_width="0dip" android:textSize="14dip"
				android:textColor="@color/listitem_text_color" android:id="@+id/listrow_with_two_elements_first"
				android:layout_height="fill_parent" android:gravity="center_vertical"
				android:layout_weight="0.85" android:text="first"></TextView>
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:weightSum="1.0" android:layout_marginLeft="10dip"
			android:layout_height="25dip" android:id="@+id/second_listitem">
			<TextView android:id="@+id/second_listitem_label"
				android:layout_weight="0.15" android:layout_width="20dip"
				android:layout_height="20dip" style="@style/label"></TextView>
			<TextView android:layout_width="0dip" android:textSize="14dip"
				android:textColor="@color/listitem_text_color"
				android:layout_height="fill_parent" android:gravity="center_vertical"
				android:layout_weight="0.85" android:text="second"
				android:id="@+id/listrow_with_two_elements_second"></TextView>
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:weightSum="1.0" android:layout_marginLeft="10dip"
			android:layout_height="25dip" android:id="@+id/third_listitem">
			<TextView android:id="@+id/third_listitem_label"
				android:layout_weight="0.15" android:layout_width="20dip"
				android:layout_height="20dip" style="@style/label"></TextView>
			<TextView android:layout_width="0dip" android:textSize="14dip"
				android:textColor="@color/listitem_text_color"
				android:layout_height="fill_parent" android:gravity="center_vertical"
				android:layout_weight="0.85" android:text="third"
				android:id="@+id/listrow_with_two_elements_third"></TextView>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:layout_width="0dip"
		android:layout_height="fill_parent" android:layout_weight="0.15"
		android:gravity="center_vertical|center_horizontal">
		<ImageView android:id="@+id/quick_action"
			android:background="@drawable/show_actions" android:layout_height="40dip"
			android:layout_width="40dip"></ImageView>
	</LinearLayout>
</LinearLayout>
