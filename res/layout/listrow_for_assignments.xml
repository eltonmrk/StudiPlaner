<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/listitem"
	android:background="@color/listitem_background" android:layout_height="wrap_content"
	android:orientation="vertical">
	<LinearLayout android:weightSum="1.0"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<LinearLayout android:layout_width="0dip"
			android:layout_weight="0.85" android:layout_height="wrap_content"
			android:orientation="vertical">
			<TextView android:text="@+id/TextView01" android:id="@+id/listitem_txt"
				android:layout_width="fill_parent"
				android:textSize="14dip" android:layout_marginLeft="10dip" android:gravity="center_vertical" android:textColor="@color/form_textcolor" android:layout_height="wrap_content"></TextView>
			<TextView android:layout_width="fill_parent"
				android:textColor="@color/listitem_text_color"
				android:layout_height="wrap_content" android:id="@+id/listrow_with_two_elements_first"
				android:textSize="12dip" android:layout_marginLeft="10dip"
				android:gravity="center_vertical" android:paddingLeft="10dip"></TextView>
		</LinearLayout>
		<LinearLayout android:layout_width="0dip"
			android:layout_weight="0.15" android:layout_height="fill_parent"
			android:gravity="center_vertical|center_horizontal">
			<ImageView android:id="@+id/quick_action"
				android:background="@drawable/show_actions" android:layout_height="40dip" android:layout_width="40dip"></ImageView>
		</LinearLayout>
	</LinearLayout>
	<HorizontalScrollView android:layout_width="fill_parent"
		android:paddingLeft="10dip" android:id="@+id/horizontal_tag"
		android:layout_height="wrap_content" android:paddingRight="10dip">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textColor="@color/listitem_text_color"
			android:id="@+id/listrow_with_two_elements_second" android:textSize="12dip"
			android:paddingTop="6dip" android:paddingBottom="6dip">
		</LinearLayout>
	</HorizontalScrollView>
</LinearLayout>
